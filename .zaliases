# source in our universal aliases
# shellcheck source=.aliases
. "$HOME/.aliases"

# term
alias reload!='. ~/.zshrc'

# simple navigation via our directory stack
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

# suffix aliases for automatically loading files into our desired programs
alias -s {js,json,jsx}=nvim
alias -s {md,mdx}=nvim
alias -s {yml,yaml}=nvim
