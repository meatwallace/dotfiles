#!/bin/bash -e

##########################
# install and update :^) #
##########################

cd "$HOME/.dotfiles"

if [[ "$(uname -s)" == "Darwin" ]]
then
  # set mac defaults
  ./mac/set-defaults.sh
fi

# install ruby
./ruby/install.sh 2>&1

# install homebrew
./homebrew/install.sh 2>&1

# upgrade homebrew
brew update

# install software
./script/install
