#!/usr/bin/env bash

set -euo pipefail

git_clone_or_update() {
  local repo_url="$1"
  local repo_dir="$2"

  # use the repository's name as the directory if we didn't explicitly pass one
  if is empty "$repo_dir"; then
    repo_dir="${repo_dir%.git}"
  fi

  if is not a directory "$repo_dir"; then
    git clone "$repo_url" "$repo_dir" >/dev/null
  else
    (
      cd "$repo_dir" && \
      # stash any changes we've made 
      git add . >/dev/null && \
      git stash >/dev/null && \
      # pull down the latest changes, including updating any submodules
      git pull >/dev/null && \
      git submodule update --init --recursive >/dev/null
    )
  fi  
}

git_clone_or_update "$@"

