#!/usr/bin/env bash

set -eo pipefail

# utility wrapping neofetch that automatically strips the prefix from it's
# output, lowercases it, and trims any trailing space
sysinfo() {
  local cmd="$1"
  local output

  output="$(neofetch --off $cmd)"
  output="${output##*: }"
  output="$(lowercase "$output")"
  output="$(trim "$output")"

  echo "$output"
}

sysinfo "$@"
