{
  // Theme
  "editor.fontFamily": "Dank Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 20,
  "material-icon-theme.folders.theme": "specific",
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "activityBar.background": "#000C1D",
    "activityBar.border": "#102a44",
    "sideBar.background": "#001122",
    "sideBar.border": "#102a44",
    "sideBar.foreground": "#8BADC1"
  },

  // Settings
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "none",
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "window.zoomLevel": 0,
  "bracketPairColorizer.forceIterationColorCycle": true,
  // "diffEditor.ignoreTrimWhitespace": false,
  // "editor.folding": false,
  // "editor.hideCursorInOverviewRuler": true,
  // "editor.matchBrackets": true,
  // "editor.occurrencesHighlight": false,
  // "editor.parameterHints": false,
  // "editor.quickSuggestions": false,
  // "editor.scrollBeyondLastLine": false,
  // "editor.snippetSuggestions": "none",
  // "editor.suggestOnTriggerCharacters": false,
  // "explorer.autoReveal": false,
  // "explorer.openEditors.visible": 0,
  // "files.defaultLanguage": "javascript",
  // "files.useExperimentalFileWatcher": true,
  // "keyboard.touchbar.enabled": false,
  // "workbench.activityBar.visible": false,
  // "workbench.editor.showIcons": false,
  // "workbench.startupEditor": "newUntitledFile",
  // "workbench.statusBar.feedback.visible": false,
  // "workbench.statusBar.visible": true,
  // "zenMode.fullScreen": false,
  // "zenMode.hideStatusBar": false,
  // "zenMode.restore": true,

  // File Associations
  "files.associations": {
    "*.js": "javascript"
  },

  // Git
  "git.autofetch": true,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.mode.active": "zen",

  // CSS
  "css.validate": false,

  // HTML
  "emmet.triggerExpansionOnTab": false,
  "html.format.enable": false,
  "html.validate.scripts": false,
  "html.validate.styles": false,

  // JavaScript
  "eslint.alwaysShowStatus": true,
  "eslint.packageManager": "yarn",
  "flow.useNPMPackagedFlow": true,
  "javascript.format.enable": false,
  "javascript.validate.enable": false,
  "jsDocCompletion.enabled": false,
  "prettier.eslintIntegration": true,
  "prettier.requireConfig": true,
  "sort-imports.default-sort-style": "module-compact",
  "typescript.tsc.autoDetect": "off",
  // "javascript.nameSuggestions": false,
  // "typescript.quickSuggestionsForPaths": false,
  // "typescript.validate.enable": false,

  // JSON
  "json.format.enable": false,

  // Markdown
  "markdownlint.config": {
    "MD013": {
      "line_length": 80
    },
    "MD029": {
      "style": "ordered"
    }
  },

  // Reason

  // Shell
  "shellcheck.enable": true,
  "shellcheck.run": "onType",
  "shellcheck.executablePath": "shellcheck",

  // SVG
  "svgviewer.enableautopreview": false,

  // TODOs
  "todohighlight.keywords": ["TODO", "DOC", "DEPRECATE"],
  "todohighlight.defaultStyle": {
    "backgroundColor": "#45474F",
    "color": "#CBCDD2"
  },
  // TOSORT
  "search.location": "panel",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "alex.enable": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "breadcrumbs.enabled": true
}
